% load packages
\RequirePackage{xcolor}           % For defining custom colors
\RequirePackage{listings}         % For code listings
\RequirePackage{etoolbox}         % For programming tools, required if you're making tweaks like counters
\RequirePackage{graphicx}         % For including images
\RequirePackage{caption}         % For customizing captions

% Set Color for Theme
\definecolor{customblue}{RGB}{35,125,160}
\usecolortheme[named=customblue]{structure}

% Set line spacing
\renewcommand{\baselinestretch}{1.3}  % Adjust the number for desired spacing, e.g., 1.3 for one-and-a-half spacing


% Beamer settings
\usetheme{Madrid} % This theme has a clean and professional look
\setbeamertemplate{caption}[numbered] % Enables figure numbering

% Bibliography Settings
\renewcommand*{\bibfont}{\scriptsize}

% Table of Contents settings
\definecolor{tocText}{RGB}{30,80,100}
\setbeamertemplate{section in toc}[sections numbered]
\setbeamerfont{section in toc}{size=\large\bfseries}
\setbeamerfont{subsection in toc}{size=\small}

% custom command
\newcommand{\sectiontitleframe}[1]{
    \begin{frame}[plain,c] % 'plain' option removes the header and footer; 'c' centers the content
        \vfill
        \centering
        \begin{beamercolorbox}[sep=8pt,center,shadow=true,rounded=true]{title}
            \usebeamerfont{title}\Huge\textbf{#1}
        \end{beamercolorbox}
        \vfill
    \end{frame}
    
} % Set up section title frame.
\newcommand{\sourcespec}[2]{%
    \par\centering\textit{\tiny Source: "#2" \cite{#1}.}%
} % Set up source specification.


% Listings settings
\definecolor{keywordcolor}{rgb}{0,0,0.5} % Dark blue for keywords
\definecolor{stringcolor}{rgb}{0,0.5,0} % Dark green for strings
\definecolor{commentcolor}{rgb}{0.5,0.5,0.5} % Gray for comments
\definecolor{classcolor}{rgb}{0.5,0,0} % Dark red for classes
\definecolor{modulecolor}{rgb}{0,0.5,0.5} % Teal for modules
\definecolor{functioncolor}{rgb}{0.5,0,0.5} % Purple for functions
\definecolor{captionblue}{RGB}{0, 120, 180} % Blue for captions

\captionsetup[lstlisting]{
font={normal,small},
  labelfont={color=captionblue},
}

\newcommand{\class}[1]{\textcolor{classcolor}{\textbf{#1}}}
\newcommand{\module}[1]{\textcolor{modulecolor}{\textbf{#1}}}
\newcommand{\function}[1]{\textcolor{functioncolor}{\textbf{#1}}}

\lstset{
  language=Python,
  basicstyle=\ttfamily\scriptsize,
  keywordstyle=\color{keywordcolor}\textbf,
  otherkeywords={self},             % Add keywords here
  keywords=[3]{True,False},         % Add more keywords here
  keywordstyle=[3]\color{keywordcolor}\textbf,
  emph={__init__,__str__,__repr__}, % Custom highlighting
  emphstyle=\color{functioncolor}\textbf, % Custom highlighting style for special methods
  stringstyle=\color{stringcolor},
  commentstyle=\color{commentcolor},
  numbers=left,                     % Line numbers on the left
  numberstyle=\tiny\color{commentcolor},    % Style of line numbers
  stepnumber=1,                     % Step between two line numbers
  numbersep=5pt,                    % How far are line numbers from code
  backgroundcolor=\color{white},    % Background color for the code
  frame=single,                     % Frame around the code
  frameround=fttt,
  framesep=5pt,                     % Increase distance of frame from the code
  framexleftmargin=8pt,             % Space on the left side inside the frame
  xleftmargin=8pt,                  % Space on the left side outside the frame
  rulecolor=\color{black},          % If not set, the frame-color may be changed on line-breaks within not-black text
  tabsize=2,                        % Sizes of tabs
  captionpos=b,                     % Caption-position at bottom
  breaklines=true,                  % Automatic line breaking
  breakatwhitespace=false,          % Automatic breaks only at whitespace
  showspaces=false,                 % Don't underscore spaces within code
  showstringspaces=false,           % Don't underscore spaces within strings
  showtabs=false,                   % Don't underscore tabs within strings
  escapeinside={(*@}{@*)},          % For comments within code
}
