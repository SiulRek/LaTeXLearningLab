\ProvidesPackage{styles/mystyle}

% Load required packages (RequirePackage is used to handle dependencies)
% Load required packages
\RequirePackage{graphicx} % Allows for the inclusion of graphics
\RequirePackage{amsmath} % Enhances mathematical typesetting
\RequirePackage{xcolor} % Provides support for colored text
\RequirePackage{geometry} % For page layout adjustments
\RequirePackage{titlesec} % For customizing titles and sections
\RequirePackage{float} % Improves interface for floating objects (tables, figures)
\RequirePackage{fancyhdr} % For custom headers and footers
\RequirePackage{listings} % For source code listing
\RequirePackage{hyperref} % For cross-referencing within the document

% Define custom commands
\newcommand{\important}[1]{\textbf{\color{red}#1}} % Creates a new command 'important' to highlight text in bold red

% Define custom colors
\definecolor{titlepagecolor}{cmyk}{1,.60,0,.40}
\definecolor{namecolor}{cmyk}{1,.50,0,.10} 

% Set the page margins
\geometry{
  top=25mm,
  bottom=25mm,
  left=25mm,
  right=25mm
}

% Custom font
%\setmainfont{Arial} % Set your custom font, compile with XeLaTeX or LuaLaTeX

% Custom chapter header formatting
\usepackage{titlesec} % Loads the 'titlesec' package for title customization
\titleformat{\chapter}
{\normalfont\huge\bfseries}{\thechapter}{1em}{} % Defines the format for chapter titles: huge, bold, with a 1em space after the chapter number
\titlespacing*{\chapter}{0pt}{20pt}{10pt} % Adjusts the spacing around the chapter title

% Custom section header formatting
\usepackage{titlesec} % Loads the 'titlesec' package for section title customization
\titleformat{\section}
{\normalfont\Large\bfseries}{\thesection}{1em}{} % Defines the format for section titles: large, bold, with a 1em space after the section number

% Custom paragraph settings
\setlength{\parindent}{0pt} % Sets paragraph indentation to zero (no first-line indent)
\setlength{\parskip}{1em} % Sets the space between paragraphs to 1em (approximately one line)

% Custom table formatting
\floatstyle{plaintop}
\restylefloat{table} % Caption to the top of the table

% Adjust the default document font size and layout
\renewcommand{\normalsize}{\fontsize{12}{15}\selectfont} % Redefines the normal font size to 12pt with a 15pt line spacing

% Table and figure formatting
\usepackage{float} % Improves interface for floating objects (tables, figures)
\restylefloat{table} % Applies new styling to tables

% Hyperref costumization
\crefname{listing}{code}{codes} 

% Configure bibliography
\bibliographystyle{plainnat}

% Configure Header and Footer
\pagestyle{fancy}

\fancyhf{}

\setlength{\headheight}{14.5pt}
\addtolength{\topmargin}{-2.5pt}

\fancyhead[L]{\nouppercase{\leftmark}} % Left header
\fancyhead[C]{} % Center header
\fancyhead[R]{} % Right header

\fancyfoot[L]{} % Left footer
\fancyfoot[C]{} % Center footer
\fancyfoot[R]{\thepage} % Right footer

\renewcommand{\headrulewidth}{0.4pt} % Header rule width
\renewcommand{\footrulewidth}{0pt} % Footer rule width (set to 0pt if no line is desired)


\fancypagestyle{plain}{
  \fancyhf{}
  \fancyfoot[R]{\thepage} % Page number on the right side of the footer
  \renewcommand{\headrulewidth}{0pt} % Removes the header line
  \renewcommand{\footrulewidth}{0pt} % Removes the footer line
} % Ensure that the first page of each chapter has the same header and footer style

% Configure the "listings" package to display Python code
\renewcommand{\lstlistingname}{Code} % Change the caption label to "Code"
\lstset{
  language=Python,
  basicstyle=\ttfamily\small,
  keywordstyle=\color{blue},
  otherkeywords={self},             % Add keywords here
  keywords=[3]{True,False},         % Add more keywords here
  keywordstyle=[3]\color{orange},
  emph={__init__,__str__,__repr__}, % Custom highlighting
  emphstyle=\color{red},            % Custom highlighting style
  stringstyle=\color{green},
  commentstyle=\color{gray},
  numbers=left,                     % Line numbers on the left
  numberstyle=\tiny\color{gray},    % Style of line numbers
  stepnumber=1,                     % Step between two line numbers
  numbersep=5pt,                    % How far are line numbers from code
  backgroundcolor=\color{white},    % Background color for the code
  frame=single,                     % Frame around the code
  frameround=fttt,
  framesep=3pt,                     % Distance of frame from the code
  framexleftmargin=11pt,          % Adjust the frame margin to fit line numbers
  rulecolor=\color{black},          % If not set, the frame-color may be changed on line-breaks within not-black text
  tabsize=2,                        % Sizes of tabs
  captionpos=b,                     % Caption-position at bottom
  breaklines=true,                  % Automatic line breaking
  breakatwhitespace=false,          % Automatic breaks only at whitespace
  showspaces=false,                 % Don't underscore spaces within code
  showstringspaces=false,           % Don't underscore spaces within strings
  showtabs=false,                   % Don't underscore tabs within strings
  numbers=left,                    % Show line numbers on the left
  numberstyle=\small\color{gray},   % Style for the line numbers
  stepnumber=1,                    % The step between two line numbers. The default is 1.
  numbersep=6pt,                  % How far the line-numbers are from the code
  }
  